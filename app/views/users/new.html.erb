<%= provide(:title, "Sign Up") %>

<h1>Sign Up</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>

    <%= render 'layouts/shared/errors', holder: @user %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <br>

      <%= f.label :email %>
      <%= f.text_field :email %>
      <br>

      <%= f.label :password %>
      <%= f.password_field :password %>
      <br>

      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation %>
      <br>
      <br>

      <%= f.submit "Create my account", class: "btn btn-success" %>
      <br>
      <br>
      <br>

      <h1>Google Sign Up</h1>
      <h2><a href="/auth/google_oauth2" class="btn btn-primary">Sign up with Google </a></h2>
    <% end %>
    <br>
  </div>
</div>