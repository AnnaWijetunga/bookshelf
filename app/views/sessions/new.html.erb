<% provide(:title, "Log in") %>

<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Log in", class: "btn btn-success" %>

    <% end %>

    <br>
    <br>
    
    <h1>Google Login</h1>
    <h2><a href="/auth/google_oauth2" class="btn btn-primary" >Log in with Google</a></h2>
    
    <br>
    <br>

    <p>If you don't have an account, <%= link_to "sign up here.", signup_path  %><p>

  </div>
</div>