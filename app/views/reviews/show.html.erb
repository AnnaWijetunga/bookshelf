<%= provide(:title, "#{@review.book.title}") %>
<br>
<h3><%= link_to @review.book.title, book_path(@review.book.id)  %>  By: <%= @review.book.author_first %> <%= @review.book.author_last %></h3>
<br>
<h4>Review By: <%= @review.user.name %></h4>
  <br>
  <p><%= @review.content %></p>

  <% if logged_in? && @review.user_id == current_user.id%>
    <br>
    <%= link_to "Edit Review", edit_review_path(@review.id), class: "btn btn-success" %>
  <% end %>

<br>
<br>